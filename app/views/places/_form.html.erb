<% form_for @place do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :latitude %><br />
    <%= f.text_field :latitude %>
  </p>
  <p>
    <%= f.label :longitude %><br />
    <%= f.text_field :longitude %>
  </p>
  <p>
    <%= f.label :altitude %><br />
    <%= f.text_field :altitude %>
  </p>
    <div style="padding-left:30px;">
      <p><strong>Venue Type</strong></p>
       <% f.fields_for :venue_type do |p| %>
           <p>
             <%= link_to "New Venue Type", new_venue_type_path %>
           </p>
           <p>
             <%= p.collection_select(:name, VenueType.all(:order => 'name ASC'), :name, :name, {:prompt => true}) %>
           </p>
       <% end %>
     </div>
  <p>
    <%= f.label :venue_type_id %><br />
    <%= f.text_field :venue_type_id %>
  </p>
  <p><%= f.submit %></p>
<% end %>
